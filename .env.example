# Copiar este archivo a .env y llenar con tus valores
# NO COMMITEAR .env a GitHub

# Flask
FLASK_ENV=production
FLASK_APP=app.py

# Base de datos (Railway proporciona DATABASE_URL automáticamente)
# Para desarrollo local:
# DATABASE_URL=sqlite:///gym.db
# Para producción (PostgreSQL):
# DATABASE_URL=postgresql://user:password@host:port/database

# Seguridad
SECRET_KEY=tu-clave-secreta-super-segura-aqui-cambiar-en-produccion
JWT_SECRET_KEY=tu-jwt-secret-super-seguro-aqui-cambiar-en-produccion

# CORS
CORS_ORIGINS=*

# Uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf
MAX_CONTENT_LENGTH=16777216
